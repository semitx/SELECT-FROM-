-- Listar los registros de la tabla actor que tienen first_name='PENELOPE'
SELECT * FROM actor WHERE first_name = 'PENELOPE';

-- Listar los registros de la tabla actor que tienen last_name='DAVIS'
SELECT * FROM actor WHERE last_name = 'DAVIS';

-- Listar todos los registros y campos de la tabla country con country_id=10
SELECT * FROM country WHERE country_id = 10;

-- Listar todos los registros y campos de la tabla category con category_id=15
SELECT * FROM category WHERE category_id = 15;

-- Listar todos los registros y campos de la tabla language con language_id=5
SELECT * FROM language WHERE language_id = 5;

-- Listar los registros de la tabla actor que tienen la letra 'A' en first_name
SELECT * FROM actor WHERE first_name LIKE '%A%';

-- Listar los registros de la tabla actor donde first_name comienza con 'A'
SELECT * FROM actor WHERE first_name LIKE 'A%';

-- Listar los registros de la tabla actor donde first_name termina con 'A'
SELECT * FROM actor WHERE first_name LIKE '%A';

-- Listar los registros de la tabla category donde category_id es 1, 3 o 5
SELECT * FROM category WHERE category_id IN (1, 3, 5);

-- Listar los registros de la tabla actor que tienen last_name='DAVIS', 'JONES' o 'SMITH'
SELECT * FROM actor WHERE last_name IN ('DAVIS', 'JONES', 'SMITH');

-- Listar todos los registros y campos de la tabla country con country_id=1, 5, 7, 11 o 13
SELECT * FROM country WHERE country_id IN (1, 5, 7, 11, 13);

-- Listar todos los registros y campos de la tabla category con category_id > 5
SELECT * FROM category WHERE category_id > 5;

-- Listar todos los registros y campos de la tabla language con language_id mayor a 5 y menor a 10
SELECT * FROM language WHERE language_id > 5 AND language_id < 10;

-- Listar todos los registros de la tabla actor donde first_name comienza con "J"
SELECT * FROM actor WHERE first_name LIKE 'J%';

-- Listar todos los registros de la tabla film donde el título contiene la palabra "LOVE"
SELECT * FROM film WHERE title LIKE '%LOVE%';

-- Listar todos los actores cuyo actor_id está entre 20 y 30
SELECT * FROM actor WHERE actor_id BETWEEN 20 AND 30;

-- Mostrar todas las películas cuyo rental_rate está entre 2.99 y 4.99
SELECT * FROM film WHERE rental_rate BETWEEN 2.99 AND 4.99;

-- Listar los registros de la tabla customer donde store_id sea 1 o 2
SELECT * FROM customer WHERE store_id IN (1, 2);

-- Mostrar los registros de la tabla film donde rating sea "G", "PG" o "PG-13"
SELECT * FROM film WHERE rating IN ('G', 'PG', 'PG-13');
